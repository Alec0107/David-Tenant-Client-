<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ImageProduct"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/ImageProduct"
                android:background="@color/black"
                android:alpha="0.3"/>

            <TextView
                android:id="@+id/NameProduct"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ImageProduct"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="London Diaries Summer Flowers - White"/>

            <TextView
                android:id="@+id/PriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/ImageProduct"
                android:layout_below="@+id/NameProduct"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="$150.00"/>

            <TextView
                android:id="@+id/SizeProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImageProduct"
                android:layout_below="@+id/PriceProduct"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Size: S"/>

            <ImageView
                android:id="@+id/Trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/trash"/>




            <FrameLayout
                android:layout_toRightOf="@+id/ImageProduct"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:layout_below="@id/SizeProduct"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/minus"/>
                    <TextView
                        android:id="@+id/QtyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/minus"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="17dp"
                        android:textColor="@color/black"
                        android:text="01"/>

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:src="@drawable/plus"/>


                </RelativeLayout>


            </FrameLayout>

        </RelativeLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>